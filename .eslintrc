{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "extends": [
        "airbnb"
    ],
    "rules": {
        "indent": ["error", 4],
        "comma-dangle": 0,
        "no-console": 0,
        "new-cap": 0,
        "no-underscore-dangle": 0,
        "quotes": ["error", "single", { "allowTemplateLiterals": true }],
        "func-names": ["error", "never"],
        "no-plusplus": ["error", { "allowForLoopAfterthoughts": true }],
        "no-restricted-syntax": ["error", "never"],
        "import/no-named-as-default": [0, "never"],
        "import/prefer-default-export": [0, "never"],
        "import/no-unresolved": [0, "never"],
        "jsx-a11y/anchor-is-valid": [0, "never"],
        "jsx-a11y/label-has-associated-control": [0, "never"],
        "jsx-a11y/label-has-for": [0, "never"],
        "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
        "react/require-default-props": [0, "never"],
        "react/jsx-uses-react": 1,
        "react/jsx-tag-spacing": 0,
        "react/jsx-indent": [2, 4],
        "react/jsx-indent-props": [2, 4],
        "react/forbid-prop-types": [0]
    }
}
